{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@Assets/*": ["src/static/*"],
      "@Common/*": ["src/common/*"],
      "@Renderer/*": ["src/renderer/*"],
      "@Types/*": ["src/renderer/types/*"],
      "@appigram/react-rangeslider": ["./node_modules/@types/react-rangeslider"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6",
  },
  "include": ["src/**/*"]
}
